<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addItem.addItemActivity"
    android:orientation="vertical">


   <ImageView
       android:id="@+id/uploadPicture"
       android:layout_width="match_parent"
       android:layout_height="250dp"/>
    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="לחץ לצילום המוצר"
        />
    
    <EditText
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="שם המוצר"
        android:id="@+id/namePutProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <EditText
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="מחיר המוצר"
        android:id="@+id/pricePutProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <EditText
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="אורך המוצר"
        android:id="@+id/lengthPutProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <EditText
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="רוחב המוצר"
        android:id="@+id/widthPutProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <EditText
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="גובה המוצר"
        android:id="@+id/heightPutProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <EditText
        android:id="@+id/colorPutProduct"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="צבע המוצר"
        android:layout_height="wrap_content"
        />
   <Spinner
       android:layout_width="100dp"
       android:layout_height="60dp"
       android:layout_gravity="right"
       android:gravity="center"
       />

    <Button
        android:id="@+id/addFurnutureButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:text="הוסף רהיט"
        android:textSize="20dp"
        />




</LinearLayout>