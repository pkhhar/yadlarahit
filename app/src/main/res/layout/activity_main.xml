<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/layoutNew">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rahit" />

        <Button
            android:id="@+id/image_menu"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:background="@drawable/baseline_menu_24" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <Button
            android:id="@+id/btnSearching"
            android:layout_width="100dp"
            android:text="חיפוש 🔍"
            android:layout_height="match_parent"/>
        <EditText
            android:hint="חפש כאן"
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:maxLength="20"
            android:layout_height="wrap_content"/>
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center"
       android:gravity="center">

       <Button
           android:tooltipText="חדר שינה"
           android:id="@+id/bedRoomPic"
           android:text="חדר שינה"
           android:textSize="30dp"
           android:gravity="center_horizontal"
           android:background="@drawable/imgfirst"
           android:layout_width="140dp"
           android:layout_height="140dp"

           />

       <Button
           android:text="שירותים"
           android:textSize="30dp"
           android:gravity="center_horizontal"
           android:id="@+id/bathRoomPic"
           android:layout_width="140dp"
           android:layout_height="140dp"
           android:background="@drawable/imgsecond"
           />


   </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center"
          android:layout_gravity="center">
          <Button
              android:text="מטבח"
              android:textSize="30dp"
              android:gravity="center_horizontal"

              android:id="@+id/kitchemRoomPic"
              android:background="@drawable/imgfort"
              android:layout_width="140dp"
              android:layout_height="140dp"
           />
          <Button
              android:text="סלון"
              android:textSize="30dp"
              android:gravity="center_horizontal"
              android:id="@+id/livingRoomPic"
              android:background="@drawable/imgfift"
              android:layout_width="140dp"
              android:layout_height="140dp"
              />
    </LinearLayout>

    <Button
        android:text="חצר"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/outsidePic"
        android:layout_gravity="center"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@drawable/imgthird"
    />

    <Button
        android:text="+"
        android:textSize="35dp"
        android:layout_marginTop="30dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="right"
        android:background="@drawable/round_button"
   />
</LinearLayout>