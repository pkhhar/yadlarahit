<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layoutNew"
    tools:context=".ui.profileFragment.profileFragment"
    >




    <LinearLayout
        android:id="@+id/linearLayout"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <Button
            android:id="@+id/btnSearching"
            android:layout_width="100dp"
            android:text="驻砖 "
            android:layout_height="match_parent"/>
        <EditText
            android:hint="驻砖 "
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:maxLength="20"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:tooltipText="专 砖"
            android:id="@+id/bedRoomPic"
            android:text="专 砖"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:background="@drawable/imgfirst"
            android:layout_width="140dp"
            android:layout_height="140dp"

            />

        <Button
            android:text="砖专转"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:id="@+id/bathRoomPic"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/imgsecond"
            />


    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:text=""
            android:textSize="30dp"
            android:gravity="center_horizontal"

            android:id="@+id/kitchemRoomPic"
            android:background="@drawable/imgfort"
            android:layout_width="140dp"
            android:layout_height="140dp"
            />
        <Button
            android:text="住"
            android:textSize="30dp"
            android:gravity="center_horizontal"
            android:id="@+id/livingRoomPic"
            android:background="@drawable/imgfift"
            android:layout_width="140dp"
            android:layout_height="140dp"
            />
    </LinearLayout>

    <Button
        android:text="爪专"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/outsidePic"
        android:layout_gravity="center"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@drawable/imgthird"
        />

</LinearLayout>