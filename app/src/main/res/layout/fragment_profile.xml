<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profileFragment.profileFragment"
    android:id="@+id/layout_profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:id="@+id/bla">

        <ImageView
            android:id="@+id/imageViewUser"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/loginimage"
            android:contentDescription="@string/app_name"/>


        <TextView
            android:id="@+id/textViewFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewUser"
            android:text="sample"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewLname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_below="@id/textViewFname"
            android:text="sample"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
           <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewLname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="sample"
            android:textSize="16sp"/>



        <TextView
            android:id="@+id/textViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="sample"
            android:textSize="16sp" />

        <Button
            android:clickable="true"
            android:layout_below="@id/textViewPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/updateUser"
            android:layout_marginTop="15dp"
            android:text="update user"
            android:layout_marginLeft="50dp"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:textAllCaps="false"
            />
        <Button
            android:textAllCaps="false"
            android:clickable="true"
            android:layout_below="@id/textViewPhone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeUser"
            android:text="remove user"
            android:textSize="15dp"
            />




    </RelativeLayout>

</FrameLayout>